{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "build",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
